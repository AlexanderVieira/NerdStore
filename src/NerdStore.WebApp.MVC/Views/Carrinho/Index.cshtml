@model CarrinhoViewModel
@{
    ViewData["Title"] = "Index";
}
<!--//////////////////////////////////////////////////-->
<!--///////////////////Cart Page//////////////////////-->
<!--//////////////////////////////////////////////////-->
<div id="page-content" class="single-page">
    <div class="container">

        <vc:summary />

        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Carrinho" asp-action="Index">Cart</a></li>
                </ul>
            </div>
        </div>

        @{
            if (Model != null)
            {
                if (Model.Items != null && Model.Items.Any())
                {
                    foreach (var item in Model.Items.OrderBy(x => x.ProdutoNome))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="product well">
                                    <div class="col-md-3">
                                        <div class="image">
                                            <img src="~/images/galaxy-note.jpg" />
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="caption">
                                            <div class="name"><h3><a asp-controller="Vitrine" asp-action="ProdutoDetalhe" asp-route-id="@item.ProdutoId">@item.ProdutoNome</a></h3></div>
                                            <div class="info">
                                                <ul>
                                                    <li>ID: @item.ProdutoId</li>
                                                </ul>
                                            </div>
                                            <div class="price"><span>@item.ValorUnitario.ToString("C")</span></div>
                                            <div class="price"><span>@item.ValorTotal.ToString("C")</span></div>

                                            <form method="post" asp-controller="Carrinho" asp-action="AtualizarItem" asp-route-id="@item.ProdutoId">
                                                <div class="row">
                                                    <input type="hidden" id="Id" name="Id" value="@item.ProdutoId" />
                                                    <label style="float: left; padding-left: 15px;">Qty: </label> <input name="quantidade" class="form-inline quantity ml-3" type="text" value="@item.Quantidade" style="float: left">
                                                    <button type="submit" class="btn btn-success ml-4" style="float: left">
                                                        <span class="glyphicon glyphicon-refresh"></span>
                                                    </button>
                                                </div>
                                            </form>
                                            <hr>
                                            <form method="post" asp-controller="Carrinho" asp-action="RemoverItem" asp-route-id="@item.ProdutoId">
                                                <button type="submit" class="btn btn-danger pull-right">
                                                    <span class="glyphicon glyphicon-square-remove"></span> Excluir
                                                </button>
                                            </form>
                                            <div class="">
                                                <div class="pull-left">
                                                    <div> <a asp-controller="Vitrine" asp-action="Index" class="btn btn-primary" style="float: right">Continuar Compra</a></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    }

                    <section>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-8">
                                <div>
                                    <form method="post" asp-controller="Carrinho" asp-action="AplicarVoucher">
                                        <div class="col-md-6 pull-left">
                                            <input placeholder="Voucher" style="width: 150px" type="text" class="form-control" name="VoucherCodigo" id="VoucherCodigo" value="@Model.VoucherCodigo">
                                        </div>
                                        <div class="col-md-6 pull-right">
                                            <button type="submit" class="btn btn-success">
                                                <span>Aplicar Voucher</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="pricedetails">
                                <div class="col-md-4 col-md-offset-8">
                                    <table>
                                        <h6>Detalhes</h6>
                                        <tr>
                                            <td>Total</td>
                                            <td>@Model.SubTotal.ToString("C")</td>
                                        </tr>
                                        <tr>
                                            <td>Discount</td>
                                            @if (@Model.ValorDesconto == 0)
                                            {
                                                <td>-----</td>
                                            }
                                            else
                                            {
                                                <td>@Model.ValorDesconto</td>
                                            }
                                        </tr>
                                        <tr>
                                            <td>Delivery Charges</td>
                                            <td>-----</td>
                                        </tr>
                                        <tr style="border-top: 1px solid #333">
                                            <td><h5>TOTAL</h5></td>
                                            <td>@Model.ValorTotal.ToString("C")</td>
                                        </tr>
                                    </table>
                                    <center> <a asp-controller="Carrinho" asp-action="ResumoDaCompra" class="btn btn-success">Finalizar Compra</a></center>
                                </div>
                            </div>
                        </div>
                    </section>
                }
                else
                {
                    <center class="col-sm-12">
                        <div class="alert alert-light" role="alert">
                            <p>O seu carrinho está vazio. Continue comprando.</p>
                        </div>
                    </center>
                }
            }
            else
            {
                <center class="col-sm-12">
                    <div class="alert alert-light" role="alert">
                        <p>O seu carrinho está vazio. Continue comprando.</p>
                    </div>
                </center>
            }
        }
    </div>
</div>

